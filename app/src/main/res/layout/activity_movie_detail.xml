<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackTransparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <FrameLayout
            android:id="@+id/playerFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@color/gridViewBackground">

            <include layout="@layout/layout_player"></include>

            <include layout="@layout/layout_cannot_play"></include>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/movieFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:paddingHorizontal="10dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_movieName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="American Boys"
                        android:textColor="@color/white"
                        android:textSize="18sp"></TextView>

                    <include layout="@layout/detail_moview_list_item"></include>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_movie_info"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/overView"
                            android:textColor="@color/white"
                            android:textSize="20sp"></TextView>


                        <TextView
                            android:id="@+id/tv_movieOverView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/collection"
                            android:textColor="@color/white"
                            android:textSize="20sp"></TextView>

                        <TextView
                            android:id="@+id/tv_movieCollection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/production_company"
                            android:textColor="@color/white"
                            android:textSize="20sp"></TextView>

                        <TextView
                            android:id="@+id/tv_productionCompany"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/production_country"
                            android:textColor="@color/white"
                            android:textSize="20sp"></TextView>

                        <TextView
                            android:id="@+id/tv_productionCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Related Images"
                            android:textColor="@color/white"
                            android:textSize="20sp"></TextView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_image_related"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/progressbar"></include>

    <include layout="@layout/no_internet_layout"></include>

    <ImageView
        android:id="@+id/back_pressed"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"></ImageView>



</RelativeLayout>